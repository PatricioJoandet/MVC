@model MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
}

<div class="contenedor">
    <div class="contenedorLogin">
        <form asp-action="Register" class="loginForm" novalidate>
            <p class="title">Registrarse</p>

            <div class="contenedorInput">
                <input asp-for="Email" class="formInput" placeholder="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="contenedorInput">
                <input asp-for="Nombre" class="formInput" placeholder="Nombre"/>
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="contenedorInput">
                <input asp-for="Password" class="formInput" placeholder="Contraseña"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="contenedorInput">
                <input asp-for="ConfirmarPassword" class="formInput" placeholder="Confirmar contraseña"/>
                <span asp-validation-for="ConfirmarPassword"></span>
            </div>
            <div class="contenedorBoton">
                <button type="submit" class="btn btn-warning">Registrarse</button>
            </div>
            <div class="d-flex mt-5">
                <span>¿Ya tenés cuenta? </span>
                <a class="link-success" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


