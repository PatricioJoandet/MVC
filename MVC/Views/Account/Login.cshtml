@{
    ViewData["Title"] = "ToDo";
}

@model MVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="contenedor">
    <div class="contenedorLogin">
        <form class="loginForm" asp-action="Login" method="post">
            <p class="title">Iniciar sesión</p>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger"})
                </div>
            }

            <div class="contenedorInput">
                <input class="formInput" asp-for="Email" placeholder="Email" />
            </div>
            <div class="contenedorInput">
                <input class="formInput" asp-for="Password" type="password" placeholder="Contraseña" />
            </div>
            <div class="contenedorBoton">
                <button class="btn btn-success" type="submit">Login</button>
            </div>
            <div class="d-flex mt-5">
                <span>¿No tenés cuenta? </span>
                <a class="link-warning" asp-controller="Account" asp-action="Register">Crear cuenta</a>
            </div>
    
        </form>
    </div>
</div>
