@model MVC.Models.Tablero

@{
    ViewData["Title"] = "Editar tablero";
}

<h1 class="text-center">Editar Tablero</h1>
<div class="d-flex justify-content-center">
    <div class="contenedorLogin">
        <form class="loginForm" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="contenedorInput">
                <input asp-for="Titulo" class="formInput" placeholder="Título" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="contenedorInput">
                <input asp-for="Subtitulo" class="formInput" placeholder="Descripción" />
                <span asp-validation-for="Subtitulo" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <input asp-for="Color" type="color" class="colorInput" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center mt-4 gap-4">
                <input type="submit" value="Guardar cambios" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
