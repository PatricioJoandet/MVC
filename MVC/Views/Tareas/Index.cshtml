@model IEnumerable<MVC.Models.Tarea>

@{
    ViewData["Title"] = "Tareas";
}

<h1>Tareas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar tarea</a>
</p>

<div class="row mt-4">
    @if(Model.Any()){
        @foreach (var tarea in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@tarea.Nombre</h5>
                        <p class="card-text">Fecha limite: @tarea.FechaLimite.ToString("d")</p>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@tarea.Id" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="col-md-12">
            <p>Sin tareas pendientes.</p>
        </div>
    }

</div>
